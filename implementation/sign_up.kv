#: import utils kivy.utils

<Sign_up_page>:
    Screen:
        BoxLayout:
            orientation: 'vertical'

            MDToolbar:
                title: 'SignUp'
                md_bg_color: .2,.2,.2,1
                specific_text_color: 1,1,1,1

            MDBottomNavigation:
                #color stuff
                panel_color:.2,.2,.2,1

                MDBottomNavigationItem: 
                    name:'signup'
                    text: 'SignUp'
                    icon: 'receipt'
                    on_tab_press: root.pressed_button_const("Sign_up")

                    MDBoxLayout:
                        size_hint: None, None
                        size: 700, 700
                        pos_hint: {"center_x" : 0.5, "center_y": 0.29}
                        #elevation: 10
                        padding: 25
                        spacing: 25
                        orientation: 'vertical'
                    
                        MDTextFieldRound:
                            id: F_name
                            hint_text: "First Name"
                            icon_left: "account"
                            size_hint_x: None
                            helper_text: "Your First Name should Be Here"
                            #helper_text_mode: "persistent"
                            width: 500
                            font_size: 18
                            pos_hint: {"center_x": 0.5}

                        MDTextFieldRound:
                            id: S_name
                            hint_text: "Surname"
                            icon_left: "account"
                            helper_text: "Your Surname should Be Here"
                            size_hint_x: None
                            width: 500
                            font_size: 18
                            pos_hint: {"center_x": 0.5}

                        MDTextFieldRound:
                            id: School
                            hint_text: "School"
                            icon_left: "school"
                            helper_text: "University or other High schools"
                            size_hint_x: None
                            width: 500
                            font_size: 18
                            pos_hint: {"center_x": 0.5}

                        MDTextFieldRound:
                            id: Email
                            hint_text: "Email"
                            icon_left: "email"
                            helper_text: "Your mail in this section"
                            size_hint_x: None
                            width: 500
                            font_size: 18
                            pos_hint: {"center_x": 0.5}

                        MDTextFieldRound:
                            id: Faculty
                            hint_text: "Faculty"
                            icon_left: "building"
                            size_hint_x: None
                            width: 500
                            font_size: 18
                            pos_hint: {"center_x": 0.5}

                        MDTextFieldRound:
                            id: Department
                            hint_text: "Department"
                            icon_left: "magnify"
                            size_hint_x: None
                            width: 500
                            font_size: 18
                            pos_hint: {"center_x": 0.5}

                        MDGridLayout:
                            cols: 3
                            spacing: 30
                            padding: 20
                            pos_hint: {"center_x" : 0.8, "center_y": 0}

                            MDRoundFlatButton:
                                text: "SUBMIT"
                                font_size: 12
                                #pos_hint: {"center_x": 0.5}
                                background_normal: ''
                                background_color: utils.get_color_from_hex('#eefa00')
                                on_press: 
                                    root.pressed_button_submit()
                                
                            MDRoundFlatButton:
                                text: "CLEAR"
                                font_size: 12
                                #pos_hint: {"center_x": 0.5}
                                background_normal: ''
                                background_color: (0,0,1,1)
                                on_press: 
                                    root.signup_clear()
                                

                            MDRoundFlatButton:
                                text: "Back Screen"
                                font_size: 12
                                pos_hint: {"center_x": 0.5}
                                background_normal: ''
                                background_color: (0,0,1,1)
                                on_press: 
                                    root.pressed_button_home("Home")
#----------------------------------------------------------------------------#
                
                MDBottomNavigationItem:
                    name:'Home'
                    text: 'Home'
                    icon: 'home'
                    on_tab_press: root.pressed_button_home("Home")


                MDBottomNavigationItem:
                    name:'Sign_up2'
                    text: 'Verify'
                    icon: 'receipt'
                    on_tab_press: root.pressed_button_SignUp2("Sign_up2")

                MDBottomNavigationItem:
                    name:'Login'
                    text: 'Login'
                    icon: 'account-circle'
                    on_tab_press: root.pressed_button_login("Login")

                MDBottomNavigationItem:
                    name:'user_menu'
                    text: 'user menu'
                    icon: 'library'
#----------------------------------------------------------------------------#


