#: import utils kivy.utils

<Login_page>:
    Screen:
        BoxLayout:
            orientation: 'vertical'

            MDToolbar:
                title: 'Login'
                md_bg_color: .2,.2,.2,1
                specific_text_color: 1,1,1,1

            MDBottomNavigation:
                #color stuff
                panel_color:.2,.2,.2,1

                MDBottomNavigationItem:
                    name:'Login'
                    text: 'Login'
                    icon: 'account-circle'

                    MDCard:
                        size_hint: None, None
                        size: 300, 400
                        pos_hint: {"center_x" : 0.5, "center_y": 0.5}
                        elevation: 10
                        padding: 25
                        spacing: 25
                        orientation: 'vertical'

                        MDLabel:
                            id: welcome_label
                            text: "welcome"
                            font_size: 40
                            halign: 'center'
                            size_hint_y: None
                            height: self.texture_size[1]
                            padding_y: 15

                        MDTextFieldRound:
                            id: user
                            hint_text: "username"
                            icon_right: "account"
                            size_hint_x: None
                            width: 200
                            font_size: 18
                            pos_hint: {"center_x": 0.5}
                        

                        MDTextFieldRound:
                            id: password
                            hint_text: "password"
                            icon_right: "eye-off"
                            size_hint_x: None
                            width: 200
                            font_size: 18
                            pos_hint: {"center_x": 0.5}
                            password: True

                        MDRoundFlatButton:
                            text: "LOG IN"
                            font_size: 12
                            pos_hint: {"center_x": 0.5}
                            on_press: root.login_logger()
                            background_normal: ''
                            background_color: utils.get_color_from_hex('#eefa00')

                        MDRoundFlatButton:
                            text: "CLEAR"
                            font_size: 12
                            pos_hint: {"center_x": 0.5}
                            on_press: root.login_logger()
                            background_normal: ''
                            background_color: (0,0,1,1)

                        MDRoundFlatButton:
                            text: "Back Screen"
                            font_size: 12
                            pos_hint: {"center_x": 0.5}
                            background_normal: ''
                            background_color: (0,0,1,1)
                            on_press: 
                                root.pressed_button_back("Home")

                        Widget:
                            size_hint_y: None
                            height: 10

                MDBottomNavigationItem:
                    name:'signup'
                    text: 'signup'
                    icon: 'receipt'
                    on_tab_press: root.pressed_button_SignUp("Sign_up")


                MDBottomNavigationItem:
                    name:'signup2'
                    text: 'Verification'
                    icon: 'receipt'
                    # i use signup page to restrict users from accessing verification page directly
                    on_tab_press: root.pressed_button_SignUp("Sign_up")

                MDBottomNavigationItem:
                    name:'Home'
                    text: 'Home'
                    icon: 'home'
                    on_tab_press:root.pressed_button_back("Home")

                MDBottomNavigationItem:
                    name:'user_menu'
                    text: 'user menu'
                    icon: 'library'