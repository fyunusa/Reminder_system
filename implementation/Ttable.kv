#:import Factory kivy.factory.Factory

<TimeTable_page>:
    id: record_widget

    BoxLayout:
        orientation: 'vertical'

        MDToolbar:
            title: 'TimeTable'
            md_bg_color: .2,.2,.2,1
            specific_text_color: 1,1,1,1
            icon: 'accounts-list'
        
        RoundedButtonTtable:
            id: data_deleter
            text: "Click to Delete"
            size_hint: (0.2, 0.1)
            #font_size: 40
            on_release:
                root.check_data_deleter()

        MDBottomNavigation:
            #color stuff
            panel_color:.2,.2,.2,1

            MDBottomNavigationItem:
                name:'TimeTable'
                text: 'TimeTable'
                icon: 'folder'
                on_tab_press: root.clicker_button()
        #----------------------------------------------------------------------------#
                BoxLayout:
                    orientation: 'horizontal'
                    size: root.width, root.height
                    spacing:10
                    padding:  [10, 10, 10, 10]
                    #padding_bottom: 

                    RoundedButtonTtable:
                        id: timetable_widget
                        text: "Click to View TimeTable"
                        size_hint: (0.3, 0.1)
                        #font_size: 40
                        on_release:
                            root.clicker_button()
                    
                    RoundedButtonTtable:
                        id: assignment_widget
                        text: "Click to View Assignments"
                        size_hint: (0.3, 0.1)
                        #font_size: 40
                        on_release:
                            root.clicker_button2()
                    
            #----------------------------------------------------------------------------#

            MDBottomNavigationItem:
                name:'Home'
                text: 'Home'
                icon: 'home'
                on_tab_press: root.pressed_button_home("Home")

            MDBottomNavigationItem:
                name:'Scheduler'
                text: 'Scheduler'
                icon: 'file'
                on_tab_press: root.pressed_button_scheduler("Scheduler")

            MDBottomNavigationItem:
                name:'UserMenu'
                text: 'UserMenu'
                icon: 'account-box'
                on_tab_press: root.pressed_button_usermenu("UserMenu")

#----------------------------------------------------------------------------#

<RoundedButtonTtable@Button>
    background_color: (0,0,0,0)
    background_normal: ''
    canvas.before:
        Color:
            rgba: (48/255, 84/255, 150/255, 1)
        RoundedRectangle:
            size: self.size
            pos: self.pos
            #radius: [70]
            radius: [(40,40), (40, 40), (40, 40), (40, 40)]
            



